<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <solid android:color="@color/actionbar_background_top" />
        </shape>
    </item>
    <item android:top="1dp">
        <shape android:shape="rectangle" >
            <solid android:color="@color/actionbar_background_bottom" />
        </shape>
    </item>
    <item
        android:bottom="1dp"
        android:top="1dp">
        <shape>
            <gradient
                android:angle="90"
                android:endColor="@color/actionbar_background_end"
                android:centerColor="@color/actionbar_background_start"
                android:startColor="@color/actionbar_background_start" />
        </shape>
    </item>

</layer-list>